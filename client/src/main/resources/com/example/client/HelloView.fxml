<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="300.0" prefWidth="300.0" style="-fx-background-color: #343541;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.client.HelloController">

    <VBox alignment="CENTER" spacing="20">
        <Text fill="WHITE" text="Welcome">
            <font>
                <Font size="24" />
            </font>
        </Text>

        <Button fx:id="SignInHello" onAction="#onActionSignInHello" text="Sign In">
            <styleClass>
                <String fx:value="button" />
            </styleClass>
        </Button>

        <Button fx:id="SignUpHello" onAction="#onActionSignUpHello" text="Sign Up">
            <styleClass>
                <String fx:value="button" />
            </styleClass>
        </Button>
    </VBox>
</StackPane>
