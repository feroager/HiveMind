<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<?import java.lang.String?>
<StackPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.client.HelloController"
           style="-fx-background-color: #343541;">

    <VBox alignment="CENTER" spacing="20">
        <Text text="Welcome" fill="WHITE">
            <font>
                <Font size="24"/>
            </font>
        </Text>

        <Button text="Sign In">
            <styleClass>
                <String fx:value="button"/>
            </styleClass>
        </Button>

        <Button text="Sign Up">
            <styleClass>
                <String fx:value="button"/>
            </styleClass>
        </Button>
    </VBox>
</StackPane>

